{
  "globalStyle": "font-medium transition-all duration-300",
  "sizes": {
    "button": "px-6 py-3 text-base",
    "button-small": "px-4 py-2 text-sm"
  },
  "variants": {
    "primary": {
      "default": "ma-nautic-btn-primary font-['Roboto'] font-bold",
      "hover": "bg-[--ma-nautic-blue]",
      "focus": "bg-[--ma-nautic-teal] ring-2 ring-[--ma-nautic-blue]",
      "active": "bg-[--ma-nautic-blue]",
      "disabled": "bg-[--ma-nautic-teal] opacity-50"
    },
    "reserve": {
      "default": "ma-nautic-btn-reserve font-['Roboto'] font-bold",
      "hover": "bg-[--ma-nautic-blue]",
      "focus": "bg-[--ma-nautic-gold] ring-2 ring-[--ma-nautic-blue]",
      "active": "bg-[--ma-nautic-blue]",
      "disabled": "bg-[--ma-nautic-gold] opacity-50"
    },
    "secondary": {
      "default": "bg-[--ma-nautic-beige] text-[--ma-nautic-blue] border border-[--ma-nautic-blue] font-['Roboto'] font-bold",
      "hover": "bg-[--ma-nautic-beige] text-[--ma-nautic-teal] border border-[--ma-nautic-teal]",
      "focus": "bg-[--ma-nautic-beige] text-[--ma-nautic-blue] ring-2 ring-[--ma-nautic-teal]",
      "active": "bg-[--ma-nautic-blue] text-[--ma-nautic-white]",
      "disabled": "bg-[--ma-nautic-beige] text-[--ma-nautic-blue] opacity-50"
    },
    "icon": {
      "default": "bg-transparent text-[--ma-nautic-blue] font-['Roboto']",
      "hover": "bg-[--ma-nautic-beige] text-[--ma-nautic-teal]",
      "focus": "bg-transparent text-[--ma-nautic-blue] ring-2 ring-[--ma-nautic-teal]",
      "active": "bg-[--ma-nautic-beige] text-[--ma-nautic-blue]",
      "disabled": "bg-transparent text-[--ma-nautic-blue] opacity-50"
    },
    "carouselNav": {
      "default": "absolute top-1/2 transform -translate-y-1/2 bg-[--ma-nautic-blue] text-white px-4 py-2 rounded-full shadow-md hover:bg-[--ma-nautic-teal]",
      "hover": "bg-[--ma-nautic-teal] text-[--ma-nautic-teal]"
    }
  },
  "states": {
    "current": "text-[--ma-nautic-teal]"
  },
  "buttons": [
    {
      "name": "contactez_nous",
      "text": "CONTACTEZ-NOUS",
      "size": "button",
      "style": "primary"
    },
    {
      "name": "decouvrir",
      "text": "DÉCOUVRIR",
      "size": "button",
      "style": "primary"
    },
    {
      "name": "voir_bateaux",
      "text": "VOIR NOS BATEAUX",
      "size": "button",
      "style": "secondary"
    },
    {
      "name": "reserver",
      "text": "RÉSERVEZ",
      "size": "button",
      "style": "reserve"
    },
    {
      "name": "carousel_prev",
      "icon": "arrow_left",
      "size": "button-small",
      "style": "carouselNav"
    },
    {
      "name": "carousel_next",
      "icon": "arrow_right",
      "size": "button-small",
      "style": "carouselNav"
    },
    {
      "name": "arrow_scroll",
      "icon": "arrow_scroll_down"
    }
  ]
}
