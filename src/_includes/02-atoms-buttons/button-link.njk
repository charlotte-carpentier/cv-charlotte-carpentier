<a href="{{ btnHref }}" 
   class="btn px-4 py-2 rounded-full transition duration-300
          {% if btnStyle == 'primary' %}bg-gray-950 text-white border border-gray-500 hover:bg-white hover:text-black{% endif %}
          {% if btnStyle == 'neutral' %}bg-gray-950 text-white border border-gray-500 hover:bg-white  hover:text-black{% endif %}
          {% if btnStyle == 'default' %}bg-white text-black border border-black hover:bg-gray-100{% endif %}
          ">
    {{ btnLabel }}
</a>



