<section class="hero py-16 bg-hero-bg">
    <div class="container mx-auto px-4">

        <div class="flex flex-col md:flex-row justify-between items-center w-full">

            <!-- Colonne gauche : Titre, Paragraphe, Boutons -->
            <div class="w-1/2 flex flex-col justify-center items-center">

                <h1 class="text-3xl font-bold text-hero-title bg-hero-bg-color underline mb-6">
                    {{ hero.title }}
                </h1>

                <p class="text-lg mb-4">
                    {{ pageData.paragraph01 }}
                </p>

                <p class="text-lg mb-6">
                    {{ pageData.paragraph02 }}
                </p>

                <div class="flex space-x-4">
                    {% set btnHref = '/#featured-articles' %}
                    {% set btnLabel = 'Featured articles' %}
                    {% set btnStyle = 'primary' %}
                    {% include "02-atoms-buttons/button-link.njk" %}

                    {% set btnHref = './blog' %}
                    {% set btnLabel = 'Most recent articles' %}
                    {% set btnStyle = 'neutral' %}
                    {% include "02-atoms-buttons/button-link.njk" %}
                </div>
            </div>

            <!-- Colonne droite : Image -->
            <div class="w-1/2">
                <img src="{{ pageData.image }}" alt="{{ pageData.imageAlt }}" class="h-full w-full object-cover">
            </div>

        </div>

    </div>
</section>
