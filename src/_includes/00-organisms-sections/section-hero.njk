<section class="hero">
    <div class="container flow">
        <div class="hero__content flow">
            <h1 class="text-3xl font-bold text-blue-50 bg-red-500 underline">{{ hero.title }}</h1>
            <p>{{ pageData.paragraph01 }}</p>
            <p>{{ pageData.paragraph02 }}</p>
            <div class="flex-group">
                {% set btnHref = '/#featured-articles' %}
                {% set btnLabel = 'Featured articles' %}
                {% set btnStyle = 'primary' %}
                {% include "02-atoms-buttons/button-link.njk" %}

                {% set btnHref = './blog' %}
                {% set btnLabel = 'Most recent articles' %}
                {% set btnStyle = 'neutral' %}
                {% include "02-atoms-buttons/button-link.njk" %}
            </div>
        </div>
        <div>
            <img src="{{ pageData.image }}" alt="{{ pageData.imageAlt }}" class="pageData__image">
        </div>
    </div>
</section>