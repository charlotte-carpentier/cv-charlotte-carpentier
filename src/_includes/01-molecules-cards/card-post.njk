<li>
    <article class="snippet">
        <img src="{{ post.data.image }}" alt="{{ post.data.title }}" class="snippet__image">
        <h3 class="snippet__title">{{ post.data.title }}</h3>
        <p class="snippet__meta">by <span>{{ post.data.author }}</span> on <span>{{ post.data.date | postDate }}</span></p>
        <p class="snippet__body">{{ post.data.description }}</p>
        {% set btnHref = post.url %}
        {% set btnLabel = 'Read more' %}
        {% set btnStyle = 'primary' %}
        {% include "02-atoms-buttons/button-link.njk" %}
    </article>
</li>