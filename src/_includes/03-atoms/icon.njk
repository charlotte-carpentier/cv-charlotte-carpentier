{% macro renderIcon(options) %}
  {% set iconData = null %}
  
  {% if options.name %}
    {# Look for the icon in the data #}
    {% for icon in options.datas.icons %}
      {% if icon.name == options.name %}
        {% set iconData = icon %}
      {% endif %}
    {% endfor %}
    
    {% if iconData %}
      {# Get size dimensions #}
      {% set size = options.size | default(iconData.defaultSize) %}
      {% set dimensions = options.datas.sizes[size] | default(options.datas.sizes.md) %}
      {% set width = dimensions.split('x')[0] %}
      {% set height = dimensions.split('x')[1] %}
      
      {# Get variant style #}
      {% set variantStyle = options.datas.variants[options.variant] | default('') %}
      
      {# Render SVG icon with appropriate classes and dimensions #}
      <img 
        src="{{ iconData.path }}" 
        alt="{{ iconData.alt }}" 
        width="{{ width }}" 
        height="{{ height }}" 
        class="{{ options.datas.globalClass }} {{ variantStyle }} {{ options.class | default('') }}"
      >
    {% else %}
      <span class="text-red-500">Icon not found: {{ options.name }}</span>
    {% endif %}
  {% else %}
    {# Direct path usage #}
    {% set size = options.size | default('md') %}
    {% set dimensions = options.datas.sizes[size] | default(options.datas.sizes.md) %}
    {% set width = dimensions.split('x')[0] %}
    {% set height = dimensions.split('x')[1] %}
    
    {# Get variant style #}
    {% set variantStyle = options.datas.variants[options.variant] | default('') %}
    
    <img 
      src="{{ options.path }}" 
      alt="{{ options.alt | default('Icon') }}" 
      width="{{ width }}" 
      height="{{ height }}" 
      class="{{ options.datas.globalClass }} {{ variantStyle }} {{ options.class | default('') }}"
    >
  {% endif %}
{% endmacro %}

