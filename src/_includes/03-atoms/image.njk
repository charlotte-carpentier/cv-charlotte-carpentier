{# ===========================================================
   @ATOMS - IMAGE
   - Renders responsive images with variant styling
=========================================================== #}

{% macro renderImage(option) %}
  {# Check if datas is provided #}
  {% if not option.datas %}
    <span class="text-red-500">Error: No image configuration provided</span>
  {% else %}
    {# Retrieve image configuration #}
    {% set imagesConfig = option.datas %}
    {% set imageName = option.name %}
    
    {# Find the specific image by name - imagesConfig is already the array #}
    {% set imageData = null %}
    {% for image in imagesConfig %}
      {% if image.name == imageName %}
        {% set imageData = image %}
      {% endif %}
    {% endfor %}

    {# Fallback if image not found #}
    {% if not imageData %}
      <span class="text-red-500">Image not found: {{ imageName }}</span>
    {% else %}
      {# Build CSS classes - Using existing image classes from input.css with Tailwind breakpoints #}
      {% set variant = imageData.variant | default('mission') %}
      {% set cssClasses = 'image-' ~ variant %}
      
      {# Add Tailwind breakpoint classes for mission variant #}
      {% if variant == 'mission' %}
        {% set cssClasses = cssClasses ~ ' w-[300px] max-h-[157px] border-[3px] sm:w-[400px] sm:h-[200px] sm:border-[4px] sm:max-h-none' %}
      {% endif %}
      
      {# Render the image #}
      <img 
        src="{{ imageData.src }}" 
        alt="{{ imageData.alt }}" 
        class="{{ cssClasses }} block"
        loading="lazy"
        decoding="async"
        {% if imageData.width %}width="{{ imageData.width }}"{% endif %}
        {% if imageData.height %}height="{{ imageData.height }}"{% endif %}
      />
    {% endif %}
  {% endif %}
{% endmacro %}

