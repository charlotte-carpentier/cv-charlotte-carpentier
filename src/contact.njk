    images: atoms.images,
    links: atoms.links,
    forms: molecules["list-forms"],
    atoms: atoms
}) }}
</div>

{# Contact Weather Highlight Section - No margin top #}
<div id="weather-section" class="mt-0">
  {% from "01-organisms/section-highlight.njk" import renderSectionHighlight %}

  {{ renderSectionHighlight({ 
      name: "ma_nautic_weather",
      datas: organisms["section-highlights"],
      headings: atoms.headings,
      links: atoms.links,
      weather: weather
    }) }}
</div>

{# Contact Infos Section #}
{% from "01-organisms/section-hero.njk" import renderSectionHero %}

{{ renderSectionHero({ 
